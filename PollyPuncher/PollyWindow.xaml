<Window x:Class="PollyPuncher.PollyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PollyPuncher"
        mc:Ignorable="d"
        Title="PollyWindow" Height="450" Width="800">
    <Grid>
        <TextBlock>Hi, I am a nice TextBlock.</TextBlock>
        <TextBox x:Name="TextToSound" HorizontalAlignment="Left" Height= "150" Width = "150" Text="{Binding pollyProps.textToPlay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Button x:Name="PlayButton" Height= "150" Width = "150" Click="ButtonBase_OnClick">Feuer Mich</Button>
    </Grid>
</Window>
